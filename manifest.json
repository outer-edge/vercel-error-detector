{
    "manifest_version": 3,
    "name": "Vercel Error Detector",
    "version": "1.0.0",
    "description": "Detects deployment errors on Vercel and displays them for easy copying to Cursor",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["https://vercel.com/*"],
    "action": {
          "default_popup": "popup.html",
          "default_title": "Vercel Error Detector"
    },
    "content_scripts": [
          {
                  "matches": ["https://vercel.com/*"],
                  "js": ["content.js"],
                  "run_at": "document_end"
          }
    ],
    "background": {
          "service_worker": "background.js"
    },
    "icons": {
          "16": "icons/icon-16.png",
          "48": "icons/icon-48.png",
          "128": "icons/icon-128.png"
    }
}
